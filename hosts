10.18.100.175 worker_name=k8sworker2 ansible_ssh_user=root ansible_ssh_pass='Dsj_2020_WW#ct'
10.18.100.176 worker_name=k8sworker3 ansible_ssh_user=root ansible_ssh_pass='Dsj_2020_WW#ct'

[k8setcd]
10.18.100.116 etcd_name=k8setcd1 ansible_ssh_user=root ansible_ssh_pass='Dsj_2020_WW#ct'
10.18.100.173 etcd_name=k8setcd2 ansible_ssh_user=root ansible_ssh_pass='Dsj_2020_WW#ct'

[k8sloadbalancer]
